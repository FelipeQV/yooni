
<style>
  .tabs {
    display: flex;
    margin-top: 96px;
    justify-content: space-around;
    background-color: #D8DFE2;
  }
  .tabs a {
    color: white;
  }
  .tabs a:hover {
    cursor: pointer;
    text-decoration: none;
    opacity: 0.8;
  }
  .tabs h3 {
    font-size: 17px;
    font-weight: bold;
    margin-top: 0;
  }
  .tabs p {
    opacity: 0.5;
    margin-bottom: 0;
  }
  .tab {
    background: #D8DFE2;
    flex: 0 0 25%;
    text-align: center;
    padding: 10px 0;
  }

  .tab.active {
    background: white;
    color: black;
  }
  .tablink {
    background-color: #555;
    color: white;
    float: left;
    border: none;
    outline: none;
    cursor: pointer;
    padding: 14px 16px;
    font-size: 17px;
    width: 25%;
  }

  .caroussel-inner {
    position: relative;
  }

  .program-title{
    position: absolute;
    right: 5px;
    top: 70px;
  }

  .program-university{
    position: absolute;
    right: 70px;
    top: 130px;
  }

  .program-university-location{
    position: absolute;
    right: 70px;
    top: 200px;
  }

  .program-creation{
    position: absolute;
    right:70px;
    top: 300px;

  }

  .avatar-profile1{
    border-radius: 50%;
    width: 60px;
  }

*, *:before, *:after {
  box-sizing: border-box;
}

.contentP {
  position: relative;
  animation: animatop 0.9s cubic-bezier(0.425, 1.14, 0.47, 1.125) forwards;
}

.cardP {

  min-height: 100px;
  padding: 20px;
  border-radius: 3px;
  background-color: white;
  box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
    margin-bottom: 100px;
}
.cardP:after {
  content: '';
  display: block;
  width: 190px;
  height: 300px;
  background: rgba(20, 103, 52, 0.57);
  position: absolute;
  animation: rotatemagic 0.75s cubic-bezier(0.425, 1.04, 0.47, 1.105) 1s both;

}

.badgescard {
  padding: 10px 20px;
  border-radius: 3px;
  background-color: #ECECEC;
  width: 480px;
  box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
  position: absolute;
  z-index: -1;
  left: 10px;
  bottom: 10px;
  animation: animainfos 0.5s cubic-bezier(0.425, 1.04, 0.47, 1.105) 0.75s forwards;
}
.badgescard span {
  font-size: 1.6em;
  margin: 0px 6px;
  opacity: 0.6;
}

.firstinfo {
  flex-direction: row;
  z-index: 2;
  position: relative;
}
.firstinfo img {
  border-radius: 50%;
  width: 90px;
  height: 90px;
}
.firstinfo .profileinfo {
  padding: 0px 20px;
}
.firstinfo .profileinfo h1 {
  font-size: 1.8em;
}
.firstinfo .profileinfo h3 {
  font-size: 1.2em;
  color: green;
  font-style: italic;
}
.firstinfo .profileinfo p.bio {
  padding: 10px 0px;
  color: #5A5A5A;
  line-height: 1.2;
  font-style: initial;
}

@keyframes animatop {
  0% {
    opacity: 0;
    bottom: -500px;
  }
  100% {
    opacity: 1;
    bottom: 0px;
  }
}
@keyframes animainfos {
  0% {
    bottom: 10px;
  }
  100% {
    bottom: -42px;
  }
}
@keyframes rotatemagic {
  0% {
    opacity: 0;
    transform: rotate(0deg);
    top: -24px;
    left: -253px;
  }
  100% {
    transform: rotate(-30deg);
    top: -24px;
    left: -78px;
  }
}
</style>





<div class="tabs">
  <a class="tab active" data-target="#1">
    <h3><%= @applications.count %></h3>
    <p>Applications</p>
  </a>
  <a class="tab" data-target="#2">

    <p>My Profile</p>
  </a>
  <a class="tab" data-target="#3">
    <h3><%= @favourites.count %></h3>
    <p>Favourites</p>
  </a>
</div>

<div class="container container-profile text-center">
  <div class="tab-content" id="1">
    <%= render partial: "carroussel_applications", locals: { applications: @applications, number: 1 } %>
  </div>

  <div class="tab-content hidden" id="2">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <h2>my profile</h2>
        <div class="contentP">
          <div class="cardP" >
            <div class="firstinfo">
              <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
              <%= image_tag avatar_url, class: "avatar-profile1" %>
              <div class="profileinfo">
                <h1><%= @user.first_name %> <%= @user.last_name %></h1>
                <h3><%= @user.email %> </h3>
                <p class="bio">Add your description</p>
              </div>
            </div>
          </div>

          <div class="badgescard">
            <span class="devicons devicons-django"></span><span class="devicons devicons-python"> </span><span class="devicons devicons-codepen"></span><span class="devicons devicons-javascript_badge"></span><span class="devicons devicons-gulp"></span><span class="devicons devicons-angular"></span><span class="devicons devicons-sass"> </span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="tab-content hidden" id="3">
    <%= render partial: "carroussel", locals: { favourites: @favourites, number: 2 } %>
  </div>
</div>

</div>


<div class="clearfix"></div>


