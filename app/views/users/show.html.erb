<style>
  .tabs {
    display: flex;
    padding: 10px 10px 0 10px;
    margin-left: 237px;
    margin-top: 61px;
  }
  .tabs a {
    color: white;
  }
  .tabs a:hover {
    cursor: pointer;
    text-decoration: none;
    opacity: 0.8;
  }
  .tabs h3 {
    font-size: 17px;
    font-weight: bold;
    margin-top: 0;
  }
  .tabs p {
    opacity: 0.5;
    margin-bottom: 0;
  }
  .tab {
    background: #D8DFE2;
    flex: 0 0 25%;
    text-align: center;
    padding: 10px 0;
  }



  .tab:first-child {
    border-radius: 10px 0 0 10px;
  }
  .tab:last-child {
    border-radius: 0 10px 10px 0;
  }
  .tab.active {
    background: white;
    color: black;
  }
  .tablink {
    background-color: #555;
    color: white;
    float: left;
    border: none;
    outline: none;
    cursor: pointer;
    padding: 14px 16px;
    font-size: 17px;
    width: 25%;
  }

  .container-profile{
    width: 817px;
  }


</style>
<div class="tabs">
  <a class="tab active" data-target="#1">
    <h3><%= @applications.count %></h3>
    <p>Applications</p>

  </a>
  <a class="tab" data-target="#2">
    <% avatar_url = current_user.facebook_picture_url || "http://placehold.it/30x30" %>
    <%= image_tag avatar_url %>
    <p>My Profile</p>
  </a>
  <a class="tab" data-target="#3">
    <h3><%= @favourites.count %></h3>
    <p>Favourites</p>
  </a>
</div>

<div class="container container-profile text-center">
  <div class="tab-content" id="1">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" style="height: 300px; margin-top: 30px">
        <div class="item active">
          <img src="https://static.pexels.com/photos/192650/pexels-photo-192650.jpeg" alt="Los Angeles">

          <div class="carousel-caption" style="bottom: 235px">

            <h3><%= @applications.first.program.title %></h3>
            <h4><%= @applications.first.program.university.name %></h4>
            <p><%= @applications.first.program.university.location %></p>
            <p><%= @applications.first.created_at%></p>

          </div>

        </div>

        <div class="item">
          <img src="https://static.pexels.com/photos/414826/pexels-photo-414826.jpeg" alt="Chicago">
          <div class="carousel-caption" style="bottom: 165px">
              <h3><%= @applications.last.program.title %></h3>
            <h4><%= @applications.last.program.university.name %></h4>
            <p><%= @applications.last.program.university.location %></p>
            <p><%= @applications.last.created_at%></p>
          </div>
        </div>

        <div class="item">
          <img src="https://static.pexels.com/photos/443356/pexels-photo-443356.jpeg" alt="New York">
          <div class="carousel-caption">
            <h3>Chicago</h3>
            <p>Thank you, Chicago!</p>
          </div>
        </div>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>




  </div>
  <div class="tab-content hidden" id="2">
    <h2>my profile</h2>
  </div>
  <div class="tab-content hidden" id="3">

    <% @favourites.each do |f| %>
    <%= f.title  %>
    <% end  %>
  </div>
</div>



<script src="profile.js"></script>

