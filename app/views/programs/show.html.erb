
<ul>
  <li>
    <%= @program.title %>
  </li>
  <%= @program.subject %>
  <%= @program.ranking %>
  <%= @program.tuition %>
  <%= @program.title %>
  <%= @program.scholarship %>
  <%= @program.university.name %>
  <%= @program.university.images %>
</ul>

<div class="container">
  <div class="row">

    <div class="col-xs-4 col-xs-offset-4">

      <%= link_to "Mark #{@program} as favourite" , favourites_show_path(@field), :method=> :post, :data => {:confirm => 'Are you sure you want to book this field?'}, :class => 'rhea-button btn btn-lg btn-show'%>


    </div>
  </div>
  <h2>
          <%= pluralize @program.reviews.size, "review" %>
        </h2>

        <div id="reviews" class="text-box">
          <% if @program.reviews.blank? %>
          Be the first to leave a review for <%= @program.title %>
          <% else %>
          <% @program.reviews.each do |review| %>
          <%= render 'reviews/show', review: review %>
          <% end %>
          <% end %>
          <%= render 'reviews/form', program: @program, review: @review %>
        </div>
</div>
